{
  "name": "root",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "preinstall": "npx -y only-allow npm",
    "prepare": "simple-git-hooks",
    "build": "lerna run build --ignore examples/**",
    "watch": "npm run build && lerna watch --ignore examples/** -- npm run build",
    "dev": "npm run watch",
    "prettier": "prettier **/* --write --ignore-unknown"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "esbuild-plugin-file-path-extensions": "^1.0.0",
    "eslint": "^8.53.0",
    "eslint-config-alloy": "^5.1.2",
    "eslint-plugin-react": "^7.33.2",
    "lerna": "^7.4.2",
    "lint-staged": "^15.0.2",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.2.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  },
  "volta": {
    "node": "20.9.0",
    "npm": "10.2.3"
  },
  "dependencies": {
    "prettier": "^3.0.3"
  }
}
